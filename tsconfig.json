{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "types": [
      "node",
      "@types/testing-library__jest-dom",
    ],
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "./src/utils/*"
      ],
      "@models/*": [
        "./src/models/*"
      ]
    }
  },
  "include": [
    "src/components",
    "src/models",
    "src/utils",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "rollup.config.mjs",
    "cypress",
    "cypress.config.ts"
  ],
  "files": [
    "src/react-chrono.ts"
  ]
} 